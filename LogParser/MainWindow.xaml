<Window x:Class="LogParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogParser"
        xmlns:core="clr-namespace:LogParser.Core;assembly=LogParser.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type core:LogItem}">
                <Expander Header="{Binding Header}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                    <StackPanel HorizontalAlignment="Stretch">
                        <TextBlock Text="{Binding Text}" />
                        <ListView ItemsSource="{Binding Children}" HorizontalAlignment="Stretch"></ListView>
                    </StackPanel>
                </Expander>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <ListView Name="lstLog" HorizontalContentAlignment="Stretch"></ListView>
    </Grid>
</Window>
